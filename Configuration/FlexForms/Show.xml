<T3DataStructure>
  <sheets>

	<general>
    	<ROOT>
    		<TCEforms>
    			<sheetTitle>LLL:EXT:bwrk_onepage/Resources/Private/Language/locallang.xlf:bwrk_onepage.settings</sheetTitle>
    		</TCEforms>
    		<type>array</type>
    		
    		<el>
				<settings.menu>
					<TCEforms>
						<label>LLL:EXT:bwrk_onepage/Resources/Private/Language/locallang.xlf:bwrk_onepage.settings.menu</label>
						<onChange>reload</onChange>
						<config>
							<type>check</type>
						</config>
					</TCEforms>
				</settings.menu>
				<settings.menuScroll>
					<TCEforms>
						<label>LLL:EXT:bwrk_onepage/Resources/Private/Language/locallang.xlf:bwrk_onepage.settings.menuScroll</label>
						<onChange>reload</onChange>
						<displayCond>FIELD:settings.menu:=:1</displayCond>
						<config>
							<type>check</type>
						</config>
					</TCEforms>
				</settings.menuScroll>
				<settings.menuScrollSpeed>
					<TCEforms>
						<label>LLL:EXT:bwrk_onepage/Resources/Private/Language/locallang.xlf:bwrk_onepage.settings.menuScrollSpeed</label>
						<displayCond>FIELD:settings.menuScroll:=:1</displayCond>
						<config>
							<type>input</type>
							<eval>int</eval>
							<default>2000</default>
						</config>
					</TCEforms>
				</settings.menuScrollSpeed>
				<settings.pageTitle>
					<TCEforms>
						<label>LLL:EXT:bwrk_onepage/Resources/Private/Language/locallang.xlf:bwrk_onepage.settings.pageTitle</label>
						<onChange>reload</onChange>
						<config>
							<type>check</type>
						</config>
					</TCEforms>
				</settings.pageTitle>
				<settings.pageTitleType>
					<TCEforms>
						<label>LLL:EXT:bwrk_onepage/Resources/Private/Language/locallang.xlf:bwrk_onepage.settings.pageTitleType</label>
						<displayCond>FIELD:settings.pageTitle:=:1</displayCond>
						<config>
							<type>select</type>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="1">1</numIndex>
									<numIndex index="0">H1</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
									<numIndex index="0">H2</numIndex>
									<numIndex index="1">2</numIndex>
								</numIndex>
								<numIndex index="2" type="array">
									<numIndex index="0">H3</numIndex>
									<numIndex index="1">3</numIndex>
								</numIndex>
								<numIndex index="3" type="array">
									<numIndex index="0">H4</numIndex>
									<numIndex index="1">4</numIndex>
								</numIndex>
								<numIndex index="4" type="array">
									<numIndex index="0">H5</numIndex>
									<numIndex index="1">5</numIndex>
								</numIndex>
								<numIndex index="5" type="array">
									<numIndex index="0">P</numIndex>
									<numIndex index="1">5</numIndex>
								</numIndex>
							</items>
						</config>
					</TCEforms>
				</settings.pageTitleType>
				<settings.pages>
					<TCEforms>
						<label>LLL:EXT:bwrk_onepage/Resources/Private/Language/locallang.xlf:bwrk_onepage.settings.pages</label>
						<config>
							<type>group</type>
							<internal_type>db</internal_type>
							<allowed>pages</allowed>
							<size>10</size>
							<maxitems>99</maxitems>
							<minitems>1</minitems>
							<show_thumbs>1</show_thumbs>
						</config>
					</TCEforms>
				</settings.pages>
    		</el>
    	</ROOT>
	</general>          

  </sheets>
</T3DataStructure>